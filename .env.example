# Server Configuration
PORT=3000
NODE_ENV=development

# OpenAI Whisper API Configuration
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=whisper-1
OPENAI_MAX_FILE_SIZE=25000000

# Firebase Configuration
FIREBASE_PROJECT_ID=your_firebase_project_id
FIREBASE_API_KEY=your_firebase_api_key
FIREBASE_AUTH_DOMAIN=your_project_id.firebaseapp.com
FIREBASE_DATABASE_URL=https://your_project_id-default-rtdb.firebaseio.com
FIREBASE_STORAGE_BUCKET=your_project_id.appspot.com
FIREBASE_MESSAGING_SENDER_ID=123456789012
FIREBASE_APP_ID=1:123456789012:web:abcdef1234567890

# Firebase Admin SDK (for server-side operations)
FIREBASE_PRIVATE_KEY_ID=your_private_key_id
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nyour_private_key_here\n-----END PRIVATE KEY-----\n"
FIREBASE_CLIENT_EMAIL=firebase-adminsdk-xxxxx@your_project_id.iam.gserviceaccount.com
FIREBASE_CLIENT_ID=123456789012345678901
FIREBASE_AUTH_URI=https://accounts.google.com/o/oauth2/auth
FIREBASE_TOKEN_URI=https://oauth2.googleapis.com/token

# Brevo (Sendinblue) Email Service Configuration
BREVO_API_KEY=your_brevo_api_key_here
BREVO_SENDER_EMAIL=noreply@yourdomain.com
BREVO_SENDER_NAME=Itinerary Whisperer

# Application Configuration
APP_NAME=Itinerary Whisperer
APP_URL=http://localhost:3000
FRONTEND_URL=http://localhost:3000

# File Upload Configuration
MAX_AUDIO_DURATION=3600000
MAX_FILE_SIZE=25000000
ALLOWED_AUDIO_FORMATS=audio/webm,audio/wav,audio/mp3,audio/m4a,audio/ogg

# Rate Limiting Configuration
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_TRANSCRIPTION_MAX=10

# CORS Configuration
CORS_ORIGIN=http://localhost:3000
CORS_CREDENTIALS=true

# Session Configuration (if implementing sessions)
SESSION_SECRET=your_session_secret_here_change_in_production

# Logging Configuration
LOG_LEVEL=info
LOG_FILE=logs/app.log

# Security Configuration
BCRYPT_SALT_ROUNDS=12
JWT_SECRET=your_jwt_secret_here_change_in_production
JWT_EXPIRES_IN=24h

# Database Configuration (additional options)
DB_CONNECTION_TIMEOUT=30000
DB_RETRY_ATTEMPTS=3

# Feature Flags
ENABLE_EMAIL_DELIVERY=true
ENABLE_TRANSCRIPT_STORAGE=true
ENABLE_AUDIO_CLEANUP=true
ENABLE_RATE_LIMITING=true

# Development/Debug Configuration
DEBUG_MODE=false
ENABLE_REQUEST_LOGGING=true
MOCK_OPENAI_API=false
MOCK_EMAIL_SERVICE=false

# Production-specific (comment out in development)
# HTTPS_REDIRECT=true
# SECURE_COOKIES=true
# TRUST_PROXY=true