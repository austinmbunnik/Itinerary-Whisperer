# Itinerary Whisperer Environment Configuration

# API Endpoints
REACT_APP_API_URL=http://localhost:3001/api
REACT_APP_TRANSCRIPTION_ENDPOINT=http://localhost:3001/api/transcribe
REACT_APP_UPLOAD_ENDPOINT=http://localhost:3001/api/upload

# Transcription Service Configuration
REACT_APP_TRANSCRIPTION_PROVIDER=custom
# Options: 'openai', 'custom', 'mock'

# OpenAI Configuration (if using OpenAI provider)
REACT_APP_OPENAI_API_KEY=your_openai_api_key_here

# Upload Configuration
REACT_APP_MAX_FILE_SIZE=104857600
# Maximum file size in bytes (default: 100MB)

REACT_APP_CHUNK_SIZE=5242880
# Chunk size for large file uploads in bytes (default: 5MB)

# Feature Flags
REACT_APP_ENABLE_AUTO_TRANSCRIPTION=true
REACT_APP_ENABLE_TRAVEL_ANALYSIS=true
REACT_APP_ENABLE_CHUNKED_UPLOADS=true
REACT_APP_ENABLE_ERROR_RECOVERY=true

# Development Settings
REACT_APP_MOCK_TRANSCRIPTION=false
REACT_APP_MOCK_UPLOAD=false
REACT_APP_DEBUG_MODE=false

# Notification Settings
REACT_APP_NOTIFICATION_TIMEOUT=5000
REACT_APP_ERROR_NOTIFICATION_TIMEOUT=8000

# Travel Analysis Settings
REACT_APP_TRAVEL_COMPLEXITY_THRESHOLD=5
REACT_APP_DEFAULT_TRIP_DURATION=3

# Performance Settings
REACT_APP_TRANSCRIPTION_TIMEOUT=120000
# Transcription timeout in milliseconds (default: 2 minutes)

REACT_APP_UPLOAD_TIMEOUT=300000
# Upload timeout in milliseconds (default: 5 minutes)

# Security Settings
REACT_APP_ALLOWED_AUDIO_FORMATS=audio/webm,audio/mp4,audio/wav,audio/ogg
REACT_APP_MAX_TRANSCRIPTION_RETRIES=3
REACT_APP_MAX_UPLOAD_RETRIES=3